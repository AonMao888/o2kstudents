<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find my id</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        @font-face{src: url('/font');font-family: 'pa';}
        body{margin: 0;background: #eee;}
        nav{display: flex;background: #fff;align-items: center;justify-content: space-between;height: 59px;}
        nav .left{display: flex;align-items: center;margin-left: 15px;}
        nav .left a{font-size: 19px;color: #333;margin-right: 9px;}
        nav .left h1{margin: 5px;color: purple;font-size: 29px;}
        form{display: flex;align-items: center;margin: 5px;margin-right: 19px;background: #eee;overflow: hidden;border-radius: 5px;}
        form input{padding: 5px;font-size: 17px;background: none;margin-left: 9px;outline: none;border: none;color: #333;width: 450px;}
        form button{display: flex;align-items: center;padding: 9px 15px;background: purple;color: #fff;outline: none;border: none;cursor: pointer;}
        form button p{margin: 3px;font-size: 15px;}form button i{margin: 3px;}
        .list{width: 98%;margin: 0 auto;display: flex;flex-direction: column;align-items: center;}
        .list a{position: relative;padding: 12px 0;text-decoration: none;margin: 5px 0;overflow: hidden;border-radius: 5px;display: flex;align-items: center;justify-content: space-between;width: 555px;transition: 0.4s;}
        .list a::after{position: absolute;content: '';right: 0;top: 0;width: 100%;height: 100%;background: white;z-index: 0;transition: 0.4s;}
        .list a:hover::after{right: -99%;}
        .list a .left{display: flex;align-items: center;margin-left: 17px;z-index: 1;}
        .list a .left img{height: 51px;object-fit: contain;object-position: center;border-radius: 51px;margin-right: 9px;}
        .list a .left h1{margin: 0;font-size: 24px;color: #333;font-family: pa;}
        .list a .right{display: flex;flex-direction: column;align-items: flex-end;margin-right: 17px;z-index: 1;}
        .list a p{margin: 0;font-size: 17px;color: #333;}
        .list a span{margin: 0;font-size: 17px;color: purple;}
        h2{margin: 10px;margin-left: 29px;font-size: 27px;color: #333;}
        .ss{background: none;color: purple;padding: 8px;margin-right: 15px;border-radius: 50px;font-size: 15px;cursor: pointer;display: none;transition: 0.4s;}
        .ss:hover{background: #eee;}.home{display: flex;flex-direction: column;width: 100%;min-height: 100vh;}
        @media(max-width:800px){
            nav .left h1{font-size: 24px;}
            nav .left a{font-size: 17px;}
            form input{width: 323px;font-size: 15px;}
            form button{padding: 8px 14px;}
            form button p{font-size: 14px;}
            h2{font-size: 24px;}
            .list a .left img{height: 42px;}
            .list a .left h1{font-size: 21px;}
            .list a p{font-size: 16px;}
            .list a span{font-size: 16px;}
        }
        @media(max-width:623px){
            nav .left h1{font-size: 4vw;}
            nav .left a{font-size: 15px;}
            form{width: 100%;display: none;margin-right: 5px;}
            form input{width: 100%;}
            form button{padding: 7px 13px;}
            form button i{font-size: 13px;}
            form button p{font-size: 13px;}
            .ss{display: block;}
            h2{font-size: 4vw;}
            .list a{width: 89%;}
            .list a .left h1{font-size: 3.6vw;}
            .list a .left img{height: 39px;}
        }
        @media(max-width:500px){
            .list a{width: 96%;}
        }
    </style>
</head>
<body>
    <nav>
        <div class="left">
            <a href=""><i class="fa-solid fa-chevron-left"></i></a>
            <h1>Find my id</h1>
        </div>
        <i onclick="s()" class="fa-solid fa-magnifying-glass ss"></i>
        <form method="post" action="search" class="search">
            <input required type="text" placeholder="Enter ID" name="id">
            <button type="submit"><i class="fa-solid fa-magnifying-glass"></i><p>Search</p></button>
        </form>
    </nav>
    <div class="home">
        <h2><%=all.length%> student found</h2>
        <div class="list">
            <%all.forEach((item)=>{%>
                <a href="../p/<%=item.member_id%>" title="Visit <%=item.name%>'s profile">
                    <div class="left">
                        <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="">
                        <h1><%=item.name%></h1>
                    </div>
                    <div class="right">
                        <p><%=item.email%></p>
                        <span><%=item.member_id%></span>
                    </div>
                </a>
            <%})%>
        </div>
    </div>
    <script>
        function s(){
            document.querySelector('form').style.display = 'flex';
            document.querySelector("nav .left").style.display = 'none';
            document.querySelector(".ss").style.display = 'none';
        }
        function c(){
            document.querySelector('form').style.display = 'none';
            document.querySelector("nav .left").style.display = 'flex';
            document.querySelector(".ss").style.display = 'block';
        }
        document.querySelector(".home").onclick=()=>{c()}
    </script>
</body>
</html>